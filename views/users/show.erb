<h1>LITERALLY AN AWESOME USER OF THIS SITE</h1>

<p>Name: <%= @user.user_name() %></p>
<p>Email Address: <%= @user.email_address %> </p>


<label for="purchased-items">Purchased Items: </label>
<ul>
  <% @music_items_purchased.each do |music_item| %>
    <li>Item Name: <%= music_item.item_name %></li>
    <p>Buying Cost: <%= music_item.buying_cost %></p>
    <p>Category: <%= music_item.find_category_name %></p>
  <% end %>
  <hr />
</ul>

<label for="items-for-sale">Items for Sale: </label>
<ul>
  <% @music_items_sale.each do |music_item| %>
    <li>Item Name: <%= music_item.item_name %></li>
    <p>Selling Price: <%= music_item.selling_price %></p>
    <p>Category: <%= music_item.find_category_name %></p>
  <% end %>
  <hr />
</ul>

<p><a href="/literally_music/users/<%= @user.id %>/buy">Buy cool new gear</a> </p>

<p><a href="/literally_music/items/new">Add cool new gear to sell</a> </p>


<form action="/literally_music/users/<%= @user.id %>/edit" method="get">
  <button type="submit" name="Edit">Edit this user</button>
</form>

<form action="/literally_music/users/<%= @user.id %>/delete" method="post">
  <button type="submit" name="Delete">Delete this user</button>
</form>
